# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000

# =================================
# DATABASE CONFIGURATION
# =================================
# MongoDB connection string
# Local MongoDB: mongodb://localhost:27017/nasiya_db
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nasiya_db
MONGO_DB=mongodb://localhost:27017/nasiya_db

# =================================
# JWT CONFIGURATION
# =================================
# JWT secret keys (generate strong random strings)
JWT_ACCESS_KEY=JWT_ACCESS_KEY
JWT_REFRESH_KEY=JWT_REFRESH_KEY

# =================================
# TELEGRAM BOT CONFIGURATION
# =================================
# Get from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# =================================
# CORS CONFIGURATION
# =================================
# Frontend URLs for CORS
DASHBOARD_HOST_URL=http://localhost:5173
BOT_HOST_URL=http://localhost:3000

# =================================
# SUPER ADMIN CONFIGURATION
# =================================
# Super Admin credentials (will be created automatically on first run)
ADMIN_FIRSTNAME=Super
ADMIN_LASTNAME=Admin
ADMIN_PHONENUMBER=+998xxxxxxx
ADMIN_PASSWORD=xxxxxx

# =================================
# OPTIONAL CONFIGURATIONS
# =================================
# Session secret for additional security
SESSION_SECRET=your_session_secret_here

# File upload configurations
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Redis configuration (if using cache)
# REDIS_URL=redis://localhost:6379

# Logging level
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100